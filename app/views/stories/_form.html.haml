= simple_form_for(@story) do |f|
  = f.error_notification

  .form-inputs
    = f.input :author_id, input_html: { value: current_user.id }, as: :hidden
    = f.input :title
    = f.input :performer_id, collection: User.all, label_method: :email, value_method: :id, include_blank: false
    = f.input :description, as: :text, input_html: { rows: 8, cols: 80, class: "input-xxlarge" } 
  .form-actions
    = f.button :submit
